@model bool
@{
	Layout = null;
}
<html lang="en">
<head>
	<meta charset="UTF-8" />
    <meta name="description" content="Anonymous Digitizing provide you to quality embroidery and vector design services">
    <meta name="keywords" content="embroidery, vector, digitizing, embroidery design, vector design">
    <meta name="author" content="Anonymous Digitizing">
    <meta name="viewport" content="width=device-width,initial-scale=1" />
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Confirmation | Anoymous Digitizing</title>
	<link href='https://fonts.googleapis.com/css?family=Lato:300,400|Montserrat:700' rel='stylesheet' type='text/css'>
	<style>
		@@import url(https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css);
		@@import url(https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css);
	</style>
	<link href="~/css/confirmation.css" rel="stylesheet" />
</head>
<body>
	<header class="site-header" id="header">
		<h1 class="site-header__title" data-lead-id="site-header-title">
			@if (Model)
			{
				<text>THANK YOU!</text>
			}
			else
			{
				<text>OOPS!</text>
			}
			</h1>
	</header>

	<div class="main-content">
		<i class="fa @(Model ? "fa-check" : "fa-plug") main-content__checkmark" id="checkmark"></i>
		<p class="main-content__body" data-lead-id="main-content-body">
			@if (Model)
			{
				<text>Your account has been activated.<br /> Thanks for confirmation we really appreciate you giving us a moment of your time.<br /><a href="@ViewBag.WebsiteURL">Login now</a></text>
			}
			else
			{
				<text>Ooops! We are sorry! It looks like your link has been expired or invalid.</text>
			}	
		</p>
	</div>

	<footer class="site-footer" id="footer">
		<p class="site-footer__fineprint" id="fineprint">Anonymous Digitizing | Copyright ©2023 | All Rights Reserved</p>
	</footer>
</body>
</html>